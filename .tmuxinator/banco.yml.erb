# ~/.tmuxinator/banco.yml

name: banco
root: <%= ENV['UMBRELLA'] %>

<% apps = %w(backend www crm broker-gateway) %>

windows:
  - editor:
    - <%= ENV['EDITOR'] %>
<% apps.each do |app|%>
<% app_dir = File.join(ENV['UMBRELLA'], "banco-#{app}") %>
  - <%= app %>:
      layout: main-vertical
      panes:
        - work:
          - cd <%= app_dir %>
<% %w(rs rq rqs).each do |r| %>
<% if File.exists?(File.join(app_dir, r)) %>
        - <%= r %>:
          - cd <%= app_dir %>
          - railsdb
          - ./<%= r %>
<% end %>
<% end %>
<% end %>
