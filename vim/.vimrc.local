set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

let g:haddock_browser="open"

" vim-go configuration
let g:go_fmt_command = "goimports"
let g:go_snippet_engine = "neosnippet"

" R-plugin stuff
let maplocalleader = ","
let g:vimrplugin_insert_mode_cmds = 0

" Writegood
nnoremap <C-w> :Writegood<CR>

